
<h1>مرحبا بك <%= user ? user.username : 'زائر' %>
</h1>
<img src="/assest/logo.jpeg" alt="logo" id="logo">
<nav>
        <% if (user && user.isAdmin) { %>
          <a href="/listings/new" class="btn btn-success btn-lg">إضافة لاعب جديد</a>
          <a href="/listings/category" class="btn btn-success btn-lg">عرض اللاعبين</a>
          <a href="/admin/create-player-account" class="btn btn-warning btn-lg">إنشاء حساب للاعب</a>
        <% } else if (currentPlayer) { %>
          <a href="/listings/profile/<%= currentPlayer._id %>" class="btn btn-sm btn-primary" title="عرض الملف">
            <i class="fas fa-user"></i>
            <span class="d-none d-sm-inline"></span>
            الملف التعريفي
          </a>
        <% } else { %>
          <a href="/auth/sign-in" class="btn btn-outline-primary btn-lg">تسجيل الدخول للبدء</a>
        <% } %>
</nav>